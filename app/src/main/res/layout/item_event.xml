<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:gravity="center_vertical"
    android:layout_marginBottom="@dimen/space_3dp"
    android:layout_marginLeft="@dimen/space_10dp"
    android:layout_marginRight="@dimen/space_10dp"
    android:layout_marginTop="4dp"
    android:elevation="0dp"
    android:background="@drawable/bg_event_item"
    android:orientation="horizontal">

    <CheckBox
        android:id="@+id/cbEventState"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="4dp"
        android:layout_width="40dp"
        android:layout_height="40dp" />

    <TextView
        android:layout_marginRight="@dimen/space_10dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="@dimen/text_size_16sp"
        android:textColor="@color/color_schedule_text"
        android:text="Better late than never ."
        android:id="@+id/tvEventTitle"/>

    <TextView
        android:id="@+id/tvEventTime"
        android:text="2022/04/10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>