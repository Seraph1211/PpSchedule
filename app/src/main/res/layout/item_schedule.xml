<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:gravity="center_vertical"
    android:layout_marginBottom="@dimen/space_3dp"
    android:layout_marginLeft="@dimen/space_3dp"
    android:layout_marginRight="@dimen/space_3dp"
    android:background="@drawable/bg_item_schedule"
    android:orientation="horizontal">

    <CheckBox
        android:id="@+id/cbScheduleState"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="30dp"
        android:layout_height="30dp" />

    <TextView
        android:layout_marginRight="@dimen/space_10dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Better late than never ."
        android:id="@+id/tvScheduleTitle"/>

</LinearLayout>